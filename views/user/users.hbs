                    <tr>
                        <th style="text-align: center;">Username</th>
                        <th style="text-align: center;">Phone</th>
                        <th style="text-align: center;">Email</th>
                        <th style="text-align: right;">Is Banned</th>
                        <th style="text-align: center;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td style="width: 200px;vertical-align: middle;text-align:center">{{user.username}}</td>
                        <td style="width: 200px;vertical-align: middle;text-align:center">{{user.phone}}</td>
                        <td style="width: 200px;vertical-align: middle;text-align:center">{{user.email}}</td>
                        {{#if isLock}}
                        <td id="markBlock" style="width: 150px;vertical-align: middle;text-align:right">X</td>
                        {{else}}
                        <td id="markBlock" style="width: 150px;vertical-align: middle;text-align:right"></td>
                        {{/if}}
                        <td style="text-align: center;">
                            <form action="/users/detail-action" method="GET">
                                <button id="id" type="submit" name="userID" value={{_id}}
                                    class="snip1457" style="font-size: 10px;font-weight: bold">Detail</button>
                            </form>
                            <button id="id" type="button" name="userID" onclick="blockUser(this.value)" value={{_id}} onc
                                 class="snip1457" style="font-size: 10px;font-weight: bold">Block</button>
                    </tr>
                    {{/each}}
