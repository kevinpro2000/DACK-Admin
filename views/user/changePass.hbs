  <body>
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 md-padding">
          <h1 class="align-center">Change Password</h1>
          <br>
          <form class="join" action="/changePass/confirmChange" method="POST">
            <div class="container-fluid">
              <div class="row">
                <div class="col-sm-12">
                  <label for="old_password">Mật khẩu cũ</label>
                  <input id="old_password" type="password" name="old_password" value="" placeholder="Password" required="" class="form-control" /><br>
                </div>
                <div class="col-sm-12">
                  <label for="password">Mật khẩu mới</label>
                  <input id="password" type="password" name="password" value="" placeholder="New Password" required="" class="form-control" onchange="checkConfirmPassword(this.value)"/><br>
                </div>
                <div class="col-sm-12">
                  <label>Nhập lại mật khẩu mới</label>
                  <input id="con_password" type="password" name="password-new-confirm" value="" placeholder="Confirm New Password" required="" class="form-control" onchange="checkConfirmPassword(this.value)"/><br>
                  <span id="password-confirm"></span>
                </div>
              </div>
            </div>
            <br>
            <button id="confirmButton" type="submit" class="btn btn-primary" disabled>Confirm</button>  
          </form>
        </div>
      </div>
    </div>
